<%= render :partial => 'form', :locals => { :id => @id } %>
<div class="svg"></div>

<!--my scripts-->
<script>
	// variables from controller
	var border 	= <%= @setting.border 	%>
	  , size	= <%= @setting.size 	%>
	  , size_p	= <%= @setting.size_p 	%>
	  , white_p	= <%= @setting.white_p 	%>
	  , black_p = <%= @setting.black_p 	%>

	function generate_Mondrian(border, size, size_p, white_p, black_p){
		// ************************************************************************************
		// FUNCTIONS HELPERS
		// ************************************************************************************
		var rand = function (n) {
				return Math.floor(Math.random()*n)
			}
			
		// ************************************************************************************
		// VARIABLES
		// ************************************************************************************
		var main_svg 	  = d3.select(".svg").append("svg:svg")

		// ************************************************************************************
		// algorithm used to generate the mapping
		// ************************************************************************************
		  , Cell 		= function(){
				this.used  = false		
		  }
		  , Rect		= function(x, y, w, h){
				this.x 		= x
				this.y 		= y
				this.width  = w
				this.height = h
				Rect.list.push(this)
		  }

		Cell.matrix	= []
		Rect.list 	= []
		matrix_size = Math.floor(600/(size+2*border))
		  
		!function(){
			for(var i=0; i<matrix_size; i++) {
				Cell.matrix[i] = []
				for(var j=0; j<matrix_size; j++) {
					Cell.matrix[i][j] = new Cell()
				}
			}
			
			for(var i=0; i<matrix_size; i++) {
				for(var j=0; j<matrix_size; j++) {
					if(!Cell.matrix[i][j].used) {
						Cell.matrix[i][j].used = true
						var w = 1
						  , h = 1
						  
						while(true) {
							if(size_p < rand(100)) break
							else {
								if(Cell.matrix[i][j+w] && !Cell.matrix[i][j+w].used){
									Cell.matrix[i][j+w].used = true
									w ++
								}
							}
						}
						
						while(true) {
							if(size_p < rand(100)) break
							else {
								if(Cell.matrix[i+h]){
									for (var k =0; k<w; k++) Cell.matrix[i+h][j+k].used = true
									h ++
								}
							}
						}
						
						var full_rect = size + 2*border
						  , x 		   = full_rect*j + border
						  , y		   = full_rect*i + border
						  , width	   = full_rect*w - 2*border
						  , height	   = full_rect*h - 2*border
							
						
						new Rect(x, y, width, height)
					}
				}
			}
			
			
		}()

		  
		// ************************************************************************************
		// draw rectangle
		// ************************************************************************************
		function generate(x, y, width, height) {
			var rect = main_svg.append("svg:rect")
					.attr('x', x)
					.attr('y', y)
					.attr('width'  , width)
					.attr('height' , height)
					.attr('fill' , 'white')
					.style("opacity", 0)
			  , color = ''
			  
			if (white_p < rand(100)) {
				if (black_p < rand(100)) {
					c = rand(3)
					if (c == 0) color = 'red'
					else if (c == 1) color = 'blue'
					else if (c == 2) color = 'yellow'
				} else color = 'black'
			} else color = 'white'
				
			rect.transition()
					.delay(2000)
					.duration(1000)
					.ease(Math.sqrt)
						.style("opacity", 1)
				.transition()
					.delay(3000)
					.duration(1000)
					.ease(Math.sqrt)
						.attr('fill' , color)
			
			main_svg.append("svg:rect")
				.attr('x', x-border)
				.attr('y', y-border)
				.attr('fill' , 'black')
				.attr('height' , border)
				.transition()
				.duration(1000)
					.attr('width'  , width + 2*border)
			main_svg.append("svg:rect")
				.attr('x', x + width)
				.attr('y', y)
				.attr('fill' , 'black')
				.attr('width'  , border)
				.transition()
				.duration(1000)
				.delay(1000)
					.attr('height' , height + border)
			main_svg.append("svg:rect")
				.attr('x', x -border)
				.attr('y', y)
				.attr('width'  , border)
				.attr('fill' , 'black')
				.transition()
				.duration(1000)
					.attr('height' , height + border)
			main_svg.append("svg:rect")
				.attr('x', x)
				.attr('y', y + height)
				.attr('height' , border)
				.attr('fill' , 'black')
				.transition()
				.duration(1000)	
				.delay(1000)
					.attr('width'  , width)
			
		}

		// ************************************************************************************
		// MAIN SCRIPT
		// ************************************************************************************
		Rect.list.forEach(function(e){
			generate(e.x, e.y, e.width, e.height)
		})
		
		main_svg.style('border', 'solid black ' + border + 'px' )
				.style('width' ,  matrix_size*(size+2*border))
				.style('height',  matrix_size*(size+2*border))
	}
	   
	generate_Mondrian(border, size, size_p, white_p, black_p)

</script>


